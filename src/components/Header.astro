---
import HamburgerButton from "../components/HamburgerButton/HamburgerButton.astro";

interface Props {
  logo: string;
  title: string;
}

const { title = "Title", logo = "/temp_logo.png" } = Astro.props;
---

<header class="bg-gray-900 text-white fixed w-full z-10 shadow-md">
  <nav class="flex items-center justify-between px-4 py-3 h-16">
    <div class="flex items-center justify-center pl-8 pr-2 mx-auto md:mx-0">
      <img src={logo} alt="Logo" class="h-8 mr-2 pr-2" />
      <a href="#" class="font-bold text-xl">{title}</a>
    </div>
    <div class="hidden md:block">
      <ul class="flex items-center space-x-4 pr-10">
        <a href="#" class="group transition duration-300 text-lg pr-6">
          Home
          <span
            class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-blue-500"
          ></span>
        </a>
        <a href="#" class="group transition duration-300 text-lg pr-6">
          About
          <span
            class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-blue-500"
          ></span>
        </a>
        <a href="#" class="group transition duration-300 text-lg pr-6">
          Services
          <span
            class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-blue-500"
          ></span>
        </a>
        <a href="#" class="group transition duration-300 text-lg pr-6">
          Contact
          <span
            class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-blue-500"
          ></span>
        </a>
        <button
          class="bg-green-500 text-black px-4 py-2 rounded-md hover:bg-green-300 hover:text-black transition duration-300"
          >Get A Quote!</button
        >
      </ul>
    </div>
    <div class="md:hidden">
      <!-- Show hamburger button on mobile screens -->
      <HamburgerButton />
    </div>
  </nav>
</header>
