---
import Main from "../components/Main/Main.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
  <Main>
    <div class="min-h-screen flex flex-col items-center">
      <div class="animate-fade-in">
        <p class="text-3xl font-bold text-paletteColor1 mb-4 pb-2">
          Contact Us
        </p>
      </div>
      <div class="animate-fade-in">
        <div class="pb-8">
          <p class="text-lg italic text-gray-800 mb-4 pb-2 relative">
            <span class="quotation-mark text-paletteColor3 text-3xl font-mono"
              >"</span
            >
             Have questions or eager to know more about what we do? Awesome,
            we're here to help! Just pop your info in the form below, and we'll
            be right back at ya. Can't wait to hear from you!
            <span class="quotation-mark text-paletteColor3 text-3xl font-mono"
              >"</span
            >
          </p>
          <div class="left-1/4 w-3/5 h-0.5 bg-paletteColor4 mx-auto"></div>
        </div>
      </div>
      <div class="pb-14 animate-fade-in justify-center">
        <form
          class="w-full max-w-lg"
          data-netlify="true"
          name="contact"
          method="POST"
          netlify-honeypot="bot-field"
          onsubmit="
          submit
          "
        >
          <div class="flex flex-wrap -mx-3 mb-6">
            <p hidden>
              <label>
                Don’t fill this out if you’re human: <input name="bot-field" />
              </label>
            </p>
            <div class="w-full md:w-1/2 px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-first-name"
              >
                First Name
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-first-name"
                name="firstName"
                type="text"
                placeholder="Jane"
                required
              />
            </div>
            <div class="w-full md:w-1/2 px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-last-name"
              >
                Last Name
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-last-name"
                type="text"
                placeholder="Doe"
                name="lastName"
              />
            </div>
            <div class="w-full px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-email"
              >
                Email
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-email"
                type="email"
                name="email"
                placeholder="janedoe@example.com"
                required
              />
            </div>
            <div class="w-full px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-phone"
              >
                Phone Number
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-phone"
                type="tel"
                name="phone"
                placeholder="(123) 456-7890"
              />
            </div>
            <div class="w-full px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-message"
              >
                Message
              </label>
              <textarea
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-message"
                rows="6"
                name="message"
                placeholder="Tell us about your business or ask us a question!"
                required></textarea>
            </div>
            <div
              class="md:flex md:items-center justify-center text-center w-full"
            >
              <div class="md:w-1/3">
                <button
                  class="shadow bg-paletteColor1 hover:bg-paletteColor2 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                  type="submit"
                >
                  Send
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <script>
      document.addEventListener("astro:page-load", () => {
        const cards = document.querySelectorAll(".animate-fade-in");
        const animateCards = () => {
          cards.forEach((card) => {
            const cardTop = card.getBoundingClientRect().top;
            const cardBottom = card.getBoundingClientRect().bottom;
            const windowHeight = window.innerHeight;
            if (cardTop < windowHeight && cardBottom >= 0) {
              card.classList.add("animate-fade-in-active");
            }
          });
        };
        animateCards();
        window.addEventListener("scroll", animateCards);
      });
    </script>
  </Main>

  <style>
    .hidden {
      opacity: 0;
    }
    .animate-fade-in {
      opacity: 0;
      transition: opacity 1s ease-in-out;
    }
    .animate-fade-in-active {
      opacity: 1;
    }
  </style>
</Layout>
